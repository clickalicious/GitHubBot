# This file is for unifying the coding style for different editors and IDEs
# http://EditorConfig.org
root = true
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space

[*.yml]
indent_size = 2

[*.conf]
indent_size = 2

[*.js]
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.pug]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true